{
  "name": "nexys",
  "version": "1.1.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "Apache 2.0",
  "private": false,
  "type": "module",
  "keywords": [
    "nexys",
    "log",
    "logging"
  ],
  "author": {
    "name": "Eren Kulaksiz",
    "email": "erenkulaksz@gmail.com"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/index.js": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint \"**/*.ts*\"",
    "build": "tsc",
    "dev": "tsc-watch --onSuccess tsc",
    "build:all": "npm run build:es2015 && npm run build:esm && npm run build:cjs && npm run build:umd && npm run build:umd-minify",
    "build:es2015": "tsc --module es2015 --target es2015 --outDir build/es2015",
    "build:esm": "tsc --module es2015 --target es5 --outDir build/esm",
    "build:cjs": "tsc --module commonjs --target es5 --outDir build/cjs",
    "build:umd": "rollup dist/index.js --file bundle.js --format umd --name nexys",
    "build:umd-minify": "rollup dist/index.js --file bundle.js --format umd --name nexys && uglifyjs bundle.js --output dist/bundle.min.js"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "rollup": "^3.28.1",
    "tsc-watch": "^5.0.3",
    "tsconfig": "*",
    "typescript": "^4.5.2",
    "uglify-js": "^3.17.4"
  }
}
